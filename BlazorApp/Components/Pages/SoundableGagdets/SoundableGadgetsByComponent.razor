@page "/soundablegadget/{GadgetId}"

<PageTitle>Soundable Gadgets</PageTitle>

@if (SoundablegadgetsToShow is Bombox bombox)
{
    <BomboxCard Bombox="Bombox"></BomboxCard>
}
@if (SoundablegadgetsToShow is Radio radio)
{
    <RadioCard Radio="Radio"></RadioCard>
}
@if (SoundablegadgetsToShow is Vinylplayer vinylplayer)
{
    <VinylplayerCard Vinylplayer="Vinylplayer"></VinylplayerCard>
}


@code {
    [Parameter]
    public string GagdetId { get; set; }
    public Soundablegadget SoundablegadgetsToShow;

    protected override void OnInitialized()
    {
        int idToFind = Int32.Parse(GagdetId);
        SoundablegadgetsToShow = AllSoundablegadgets.Find(x => x.GadgetId == idToFind);
    }
}
