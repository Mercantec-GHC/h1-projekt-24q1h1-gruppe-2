<div class="card">
    <div class="card-body" style="width: 18rem;">
        <img src="/assets/vinylplade.latest.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@soundablegadget.Name</h5>
            <p class="card-text">Artist: @soundablegadget</p>
            <p class="card-text">Condition: @soundablegadget.Condition</p>
            <p class="card-text">Price: @soundablegadget.Price</p>
            <a href="/soundInfomation/@soundablegadget.GadgetId" class="btn btn-primary">Press here to see details</a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Soundablegadget soundablegadget { get; set; }
}
