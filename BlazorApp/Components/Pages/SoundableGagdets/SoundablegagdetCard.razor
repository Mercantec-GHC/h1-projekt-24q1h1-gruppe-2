<div class="card">
    <div class="card-body" style="width: 18rem;">
        <img src="/assets/vinylplade.latest.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@SoundablegadgetsToShow.Name</h5>
            <p class="card-text">Artist: @SoundablegadgetsToShow</p>
            <p class="card-text">Condition: @SoundablegadgetsToShow.Condition</p>
            <p class="card-text">Price: @SoundablegadgetsToShow.Price</p>
            <a href="/soundInfomation/@SoundablegadgetsToShow.GadgetId" class="btn btn-primary">Press here to see details</a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Soundablegadget SoundablegadgetsToShow { get; set; }
}
