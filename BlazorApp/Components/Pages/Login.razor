@page "/Login"
@using Npgsql
@using System.Drawing
@inject NavigationManager NavigationManager
@inject IWebHostEnvironment _hostingEnvironment
@inject List<Sound> allSounds
@inject List<Soundablegadget> AllSoundablegadgets
@using Domain_Models


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login</title>
</head>
<body>
    <div class="wrapper">
        <div class="title">
            Login Form
        </div>
        <form class="ourForm">
            <div class="field">
                <input type="text" @bind="UserID" required>
                <label>Enter your username</label>
            </div>
            <div class="field">
                <input type="password" @bind="Password" required>
                <label>enter your password</label>
            </div>
            <div class="content">
                <div class="checkbox">
                    <input type="checkbox" id="remember-me">
                    <label for="remember-me">Remember me</label>
                </div>
   
            </div>
            <div class="field">
                <input type="submit"  @onclick="Submit" value="Login">
            </div>
            <div class="signup-link">
                Not a member? <a href="/Registration">Signup now</a>
            </div>
        </form>
    </div>
</body>
</html>



@code {

    public string UserID { get; set; }
    public string Password { get; set; }


    private async Task Submit()
    {
        NavigationManager.NavigateTo("/myprofil", true);
    }
}