<h1 id="allproducts">All products</h1>
<p>We currently have @soundsToShow.Count classicals on our website</p>

<div class="container">
    <div class="row">
        @foreach (var sound in soundsToShow)
        {
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="/assets/vinylplade.latest.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@sound.name</h5>
                        <p class="card-text">Artist: @sound.artist</p>
                        <p class="card-text">Condition: @sound.condition</p>
                        <p class="card-text">Price: @sound.price</p>
                        <a href="/vinyl/@sound.id" class="btn btn-primary">Press here to see details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@code {
    List<Sound> soundsToShow;

    protected override void OnInitialized()
    {
        soundsToShow = allSounds;
    }
}